# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# MCP Server Configuration
MCP_SERVER_NAME=googlemaps-mcp-service
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_PORT=3000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=googlemaps_mcp:

# Cache Configuration
CACHE_TTL_GEOCODING=86400
CACHE_TTL_PLACES=43200
CACHE_TTL_DIRECTIONS=3600
CACHE_TTL_TRAFFIC=900
CACHE_TTL_STATIC_MAPS=604800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Security Configuration
API_KEY_HEADER=x-api-key
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Performance Configuration
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=100
KEEP_ALIVE_TIMEOUT=5000

# Development Configuration
NODE_ENV=development
DEBUG=googlemaps:*

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Google Maps API Specific Settings
GOOGLE_MAPS_REGION=US
GOOGLE_MAPS_LANGUAGE=en
GOOGLE_MAPS_UNITS=metric

# Optional Database Configuration (for persistent storage)
DATABASE_URL=
DATABASE_MAX_CONNECTIONS=10
DATABASE_IDLE_TIMEOUT=30000